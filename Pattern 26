A   
BA  
CBA 
DCBA

#include<iostream>
using namespace std;

int main(int argc, char const *argv[])
{
	int rows = 4;
	int cols = rows;
	int num = 64;
	int num2;
	for(int i=1;i<=rows;i++){
		num++;
		num2 = num;
		for(int j=1;j<=cols;j++){
			if(j<=i){
				cout << char(num2);
				num2--;
			}
			else {
				cout << " ";
			}
		}
		cout << "\n";
	}
	return 0;
}
