 * * * * 
* * * * *


for(int i=1;i<6;i++){
		for(int j=1;j<10;j++){
			if (j>(5-i) && j<(5+i)){
				if(i%2 == 0){
					if(j%2 == 0){
						cout << "*";
					} else{
						cout << " ";
					}
				} else {
					if (j%2 == 0){
						cout << " ";
					} else {
						cout << "*";
					}
				}
			}
			else {
				cout << " ";
			}
		}
		cout << "\n";
	}
