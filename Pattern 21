#include<iostream>
using namespace std;

int main(int argc, char const *argv[])
{
	int rows = 8;
	int cols = 2*rows;
	int half = rows;
	int k = 4;
	for(int i=1;i<=rows;i++){
		for(int j=1;j<=cols;j++){
			if(j>(half-i) && j<=(half+k)){
				cout << "*";
			}
			else {
				cout << " ";
			}
		}
		k--;
		cout << "\n";
	}
	return 0;
}
