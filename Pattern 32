for even sides

*    *
 *  * 
  **  
  **  
 *  * 
*    *


for odd sides

*     *
 *   * 
  * *  
   *   
  * *  
 *   * 
*     *

#include<iostream>
using namespace std;

int main(int argc, char const *argv[])
{
	int rows = 7;
	int cols = rows;

	for(int i=1;i<=rows;i++){
		for(int j=1;j<=cols;j++){
			if(j==i || j==(cols-i+1)){
				cout << "*";
			}
			else {
				cout << " ";
			}
		}
		cout << "\n";
	}
	return 0;
}
