#include<iostream>
using namespace std;

int main(int argc, char const *argv[])
{
	int rows = 10;
	int col = rows;
	int r,c;
	for(int i=1;i<=rows;i++){
		r = rows-i;
		c = r;
		for(int j=1;j<=col;j++){
			if(j<=(col-i+1)){
				cout << c;
				c--;
			} else {
				cout << " ";
			}
		}
		cout << "\n"; 
	}
	return 0;
}
